{
  "manifest_version": 3,
  "name": "Reapeated sites",
  "version": "1.0",
  "description": "An extension to check if you have already visited the site",

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icon.png"
    }
  },

  "permissions": ["storage", "tabs", "action"]
}
